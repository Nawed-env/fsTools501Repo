<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd">
           
           
            <!-- configuaration java file as spring bean -->
           
           <bean id="ltime" class="java.time.LocalTime" factory-method="now"/><!-- dependent spring bean cnfig -->
           <bean id="ldate" class="java.time.LocalDate" factory-method="now"/><!--  dependent spring bean cnfig-->
           
           <bean id="wmg" class="com.nt.sbeans.wishMessageGenerator2"> <!--  target spring bean cnfig-->
          
                <!-- Properties for setter Injection -->
           <property name="time" ref="ltime"></property>
           <property name="date" ref="ldate"></property>
           <property name="age" value="23"></property>
           <property name="email" value="@nawed"></property>
           
           </bean>
           
           
</beans>